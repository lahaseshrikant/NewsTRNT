# Content Engine — Environment Configuration
# Copy this file to .env and fill in your values

# ── Service Configuration ─────────────────────────────────────
ENGINE_PORT=8000
ENGINE_HOST=0.0.0.0
ENGINE_API_KEY=change-me-to-a-secure-key
ENGINE_LOG_LEVEL=INFO
ENGINE_WORKERS=1
ENGINE_ENV=development

# ── Admin Backend Connection ──────────────────────────────────
ADMIN_BACKEND_URL=http://localhost:5002
MARKET_INGEST_API_KEY=your-market-ingest-api-key
CONTENT_ENGINE_API_KEY=your-content-engine-api-key

# ── AI Provider ───────────────────────────────────────────────
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.3
# AI_FALLBACK_MODEL=gpt-3.5-turbo  # Fallback if primary fails

# ── News Sources ──────────────────────────────────────────────
NEWS_API_KEY=your-newsapi-key
# RSS_FETCH_INTERVAL_MINUTES=15

# ── Market Data ───────────────────────────────────────────────
# MARKET_SCRAPE_INTERVAL_MINUTES=5
# MARKET_CRYPTO_INTERVAL_MINUTES=10

# ── Redis (optional — for caching) ───────────────────────────
# REDIS_URL=redis://localhost:6379/0

# ── Scheduler ─────────────────────────────────────────────────
ENABLE_SCHEDULER=true
DEFAULT_TIMEZONE=UTC

# ── Database (read-only reference, NOT for direct writes) ────
# DATABASE_URL=postgresql://user:pass@host:5432/dbname
