# ==============================================================================
# NewsTRNT Backend - Environment Configuration Template
# ==============================================================================
# Copy this file to backend/.env and fill in your actual values
# ==============================================================================

# Database (same as frontend)
DATABASE_URL="postgresql://user:password@host.neon.tech/dbname?sslmode=require"

# Server Configuration
PORT=5000
NODE_ENV="development"

# JWT Authentication (generate: openssl rand -base64 32)
JWT_SECRET="replace-with-secure-random-string"

# CORS - Allowed frontend origins
CLIENT_URLS="http://localhost:3000,http://localhost:3001"

# API Base URL
API_BASE_URL="http://localhost:5000"
