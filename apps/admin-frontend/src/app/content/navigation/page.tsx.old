    createdAt: new Date().toISOString(),
    updatedAt: new Date().toISOString()
  },
  {
    id: 'articles',
    name: 'articles',
    label: 'Articles',
    href: '/articles',
    icon: 'üìÑ',
    isActive: true,
    sortOrder: 3,
