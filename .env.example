# ==============================================================================
# NewsTRNT Platform - Environment Configuration Template
# ==============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit real credentials to version control!
# ==============================================================================

# ==============================================================================
# APPLICATION CONFIG
# ==============================================================================
NODE_ENV="development"
APP_TIER="free"

# ==============================================================================
# FRONTEND CONFIG (Next.js)
# ==============================================================================
# Site settings
NEXT_PUBLIC_SITE_NAME="NewsTRNT"
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Backend API endpoint
NEXT_PUBLIC_API_URL="http://localhost:5000/api"

# NextAuth.js (generate secret: openssl rand -base64 32)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="replace-with-secure-random-string"

# ==============================================================================
# DATABASE (Shared between Frontend and Backend)
# ==============================================================================
# Neon PostgreSQL (free tier: https://neon.tech)
DATABASE_URL="postgresql://user:password@host.neon.tech/dbname?sslmode=require"

# ==============================================================================
# BACKEND CONFIG (Express.js - also set in backend/.env)
# ==============================================================================
PORT=5000
JWT_SECRET="replace-with-secure-random-string"
CLIENT_URLS="http://localhost:3000,http://localhost:3001"
API_BASE_URL="http://localhost:5000"

# ==============================================================================
# ADMIN AUTHENTICATION (Required for admin panel access)
# ==============================================================================
# Super Admin credentials (full system access)
SUPER_ADMIN_EMAIL="superadmin@yoursite.com"
SUPER_ADMIN_PASSWORD="replace-with-very-strong-password"

# Regular Admin credentials (content management)
ADMIN_EMAIL="admin@yoursite.com"
ADMIN_PASSWORD="replace-with-strong-password"

# Security salt for password hashing (generate: openssl rand -hex 32)
ADMIN_PASSWORD_SALT="replace-with-random-salt"

# CSRF protection secret (generate: openssl rand -hex 32)
CSRF_SECRET="replace-with-random-secret"

# ==============================================================================
# AI SERVICES (Optional - for scraper-ai module)
# ==============================================================================
# OpenAI for AI summarization
OPENAI_API_KEY="sk-your-openai-api-key"

# News API for article fetching  
NEWS_API_KEY="your-news-api-key"
GNEWS_API_KEY="your-gnews-key"

# ==============================================================================
# MARKET DATA PROVIDERS (Optional - for financial widgets)
# ==============================================================================
ENABLE_REAL_MARKET_DATA="false"
# ALPHA_VANTAGE_API_KEY=""
# FINNHUB_API_KEY=""
# TWELVE_DATA_API_KEY=""
# FMP_API_KEY=""

# ==============================================================================
# AUTHENTICATION PROVIDERS (Optional - OAuth)
# ==============================================================================
# Google OAuth
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# ==============================================================================
# STORAGE (Optional - for media uploads)
# ==============================================================================
STORAGE_PROVIDER="local"
# CLOUDINARY_CLOUD_NAME=""
# CLOUDINARY_API_KEY=""
# CLOUDINARY_API_SECRET=""

# ==============================================================================
# CACHING (Optional - for production)
# ==============================================================================
# REDIS_URL="redis://localhost:6379"
# ==============================================================================
# DATABASE SEEDING (Required when running seed script)
# ==============================================================================
# These are used by 'npx prisma db seed' to create initial admin users
SEED_ADMIN_PASSWORD="replace-with-strong-admin-password"
SEED_TEST_PASSWORD="replace-with-test-user-password"

# ==============================================================================
# DOCKER/PRODUCTION CONFIG
# ==============================================================================
# For docker-compose, set these in your shell or a .env file in project root
# POSTGRES_DB=newstrnt
# POSTGRES_USER=admin
# POSTGRES_PASSWORD=your-secure-db-password

# ==============================================================================
# PRODUCTION CHECKLIST
# ==============================================================================
# Before deploying to production, ensure ALL of the following are set:
# ✅ NEXTAUTH_SECRET (generate: openssl rand -base64 32)
# ✅ JWT_SECRET (generate: openssl rand -base64 32)  
# ✅ ADMIN_PASSWORD_SALT (generate: openssl rand -hex 32)
# ✅ CSRF_SECRET (generate: openssl rand -hex 32)
# ✅ SUPER_ADMIN_EMAIL and SUPER_ADMIN_PASSWORD
# ✅ DATABASE_URL with production database credentials
# ✅ NEXT_PUBLIC_SITE_URL with your actual domain
# ✅ NEXTAUTH_URL with your actual domain